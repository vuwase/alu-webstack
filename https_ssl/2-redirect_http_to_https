defaults
        mode    http
        option  httplog
        option  dontlognull
        timeout connect 5000
        timeout client  50000
        timeout server  50000

frontend http-in
        bind *:80
        bind *:443 ssl crt /etc/letsencrypt/live/www.vaste.tech/fullchain.pem 

        mode http
        default_backend webservers

backend webservers
        balance roundrobin
        server web-01 54.163.198.159:80 check
        server web-02 52.90.3.100:80 check


frontend https_frontend
        bind *:80
        bind *:443 ssl crt /etc/letsencrypt/live/www.vaste.tech/fullchain.pem 

        mode http
        default_backend webservers

frontend https_fronted
        bind *:80
        mode http
        option httplog
        redirect scheme https code 301 if !{ ssl_fc }
